{
  "family": "chatia-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::123456789012:role/chatia-ecs-execution",
  "taskRoleArn": "arn:aws:iam::123456789012:role/chatia-frontend-task",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "000000000000.dkr.ecr.us-east-1.amazonaws.com/chatia-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/chatia-frontend",
          "awslogs-region": "<AWS_REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
